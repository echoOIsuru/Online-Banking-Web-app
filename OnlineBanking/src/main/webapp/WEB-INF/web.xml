<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>OnlineBanking</display-name>

	<!--customer card menu -->
	<servlet>
		<servlet-name>mlogin</servlet-name>
		<servlet-class>com.manage.servlet.MloginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mlogin</servlet-name>
		<url-pattern>/mlog</url-pattern>
	</servlet-mapping>

	<!--customer register -->
	<servlet>
		<servlet-name>customer_register</servlet-name>
		<servlet-class>com.manage.servlet.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>customer_register</servlet-name>
		<url-pattern>/customer_registration</url-pattern>
	</servlet-mapping>

	<!--customer login -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.manage.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>

	<!--profile -->
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.manage.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>


	<!--update -->
	<servlet>
		<servlet-name>update</servlet-name>
		<servlet-class>com.manage.servlet.UpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>

	<!--delete -->

	<servlet>
		<servlet-name>delete</servlet-name>
		<servlet-class>com.manage.servlet.DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>delete</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>

	<!--add card -->

	<servlet>
		<servlet-name>addCard</servlet-name>
		<servlet-class>com.manage.servlet.AddCardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addCard</servlet-name>
		<url-pattern>/addCard</url-pattern>
	</servlet-mapping>
	
	<!--Disable card -->

	<servlet>
		<servlet-name>disableCard</servlet-name>
		<servlet-class>com.manage.servlet.DisableCardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>disableCard</servlet-name>
		<url-pattern>/disableCard</url-pattern>
	</servlet-mapping>
	


</web-app>